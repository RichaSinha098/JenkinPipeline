pipeline {
	agent any
	tools {
		maven 'Maven 3.6.0'
		jdk 'jdk8'
	}
	stages {
		stage ('Build') {
			steps{
				echo "Building the release..."
				sh 'mvn clean package'
			}
		}
		stage ('Test') {
			steps {
				echo 'Testing the code ...'
				sh 'mvn test'
			}
			post{
				always{
					junit 'target/surefire-reports/*.xml'
				}
			}
		}
	}
}
