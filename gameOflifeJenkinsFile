pipeline{
	agent any
	tool{
		maven 'Maven 3.3.9'
		jdk 'jdk8'
	}
	stages {
		stage ('Build'){
			steps{
				echo "Building the release..."
				sh mvn clean package
			}
		}
		stage ('Test') {
			steps {
				echo 'Testing the code ...'
				sh 'mvn test'
			}
			post{
				always{
					junit 'target/surefire-reports/*.xml'
				}
			}
		}
	}
}
