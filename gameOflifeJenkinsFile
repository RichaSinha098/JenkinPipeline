pipeline {
	agent any
	tools {
		maven 'maven 3.6.0'
		jdk 'jdk8'
	}
	stages {
		
		stage ('Build') {
			steps{
				echo "Building the release..."
				sh 'mvn clean package'
			}
		}
		stage ('Test') {
			steps {
				echo 'Testing the code ...'
				sh 'mvn test'
			}
	        }
		stage ('Deploy on tomcat') {
			steps {
			    echo 'Deploying build on tomcat server'
				sh 'scp /var/jenkins_home/workspace/DeployProj/gameoflife-web/target/gameoflife.war user@server:/opt/apache-tomcat-8.5.43/webapps'
			}
		}
			
		
		
	}
}
