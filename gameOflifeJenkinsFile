pipeline {
	agent any
	tools {
		maven 'maven 3.6.0'
		jdk 'jdk8'
	}
	stages {
		stage ('initialize') {
			sh '''
			echo "PATH = ${PATH}"
			echo "M2_PATH = ${M2_PATH}"
			echo "JAVA_HOME = ${JAVA_HOME}"
			'''
		}
		stage ('Build') {
			steps{
				echo "Building the release..."
				sh 'mvn clean package'
			}
		}
		stage ('Test') {
			steps {
				echo 'Testing the code ...'
				sh 'mvn test'
			}
			post{
				always{
					junit 'target/surefire-reports/*.xml'
				}
			}
		}
	}
}
